<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Login">

    <!-- bottom -->

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/top_login" />

    <TextView
        android:id="@+id/login"
        android:layout_width="82dp"
        android:layout_height="29dp"
        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="87dp"
        android:gravity="top"
        android:text="@string/login"
        android:textAppearance="@style/login" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp" />

    <!-- PASSWORD -->

    <TextView
        android:id="@+id/password"
        android:layout_width="136dp"
        android:layout_height="29dp"
        android:layout_below="@+id/email_login"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="32dp"
        android:gravity="top"
        android:text="@string/password"
        android:textAppearance="@style/password" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="263dp"
        android:layout_marginLeft="263dp"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:text="@string/forget_pass"
        android:textAppearance="@style/forget_pass" />

    <Button
        android:id="@+id/login_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="60dp"
        android:text="LOGIN" />

    <TextView
        style="@style/forget_pass"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_but"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="20dp"
        android:text="@string/signup" />

    <View
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bottom_login" />


</RelativeLayout>